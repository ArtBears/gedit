dnl if test x$have_orbit = xyes; then
dnl  AC_CHECK_LIB(gnorba, gnome_CORBA_init, have_libgnorba=yes, have_libgnorba=no,
dnl               $ORBIT_LIBS $GNOMEUI_LIBS)
dnl fi
